<div class="ui segment">
		<center><h1>Posts Collection</h1></center>

		<br><br>
		<a href="/posts/new">
		<button class="ui basic button">
		  New Posts
		</button>
		</a>
		<br>
		<br>

		<div class="panel panel-default">
		<table class="ui selectable celled table">

			<thead>
				<tr>
					<th>Title</th>
					<th>Category</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<% @posts.each do |p| %>
					<tr>
						<td><%= p.title %></td>
						<td><%= p.try(:category).try(:name) %></td>
						<td>
							<% if (p.user == current_user) %>
								<%= link_to "SHOW", post_path(p.id) %>|
								<%= link_to "EDIT", edit_post_path(p.id) %>|
								<%= link_to "DELETE", post_path(p.id), data: {:confirm => "Are you sure?"}, :method => :delete %>
							<% else %>
								<%= link_to "SHOW", post_path(p.id) %>
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>

		</table>

		</div>
</div>