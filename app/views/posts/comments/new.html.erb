<div class="ui tall stacked segment" id="div1">
	<center><h1>Create New Comment</h1></center>
	<%= simple_form_for([@comment.post, @comment]) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
      <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.input :date_posted %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-default" %>
  </div>
	<% end %>
</div>

<div class="ui tall stacked segment" id="div2">
	<center><h2>Recent Posts</h2></center><br>
	<div class="ui fitted divider"></div>
	<% @posts.each do |p| %>
	<ul>
		<li><h4><%= link_to p.title, post_path(p.id) %></h3></li>	
	</ul>
	<% end %>
</div>


<style>
	#div1{
		width: 70%; float:left; padding-bottom: 3%;
	}

	#div2{
		width: 29%; float:left; padding-bottom: 3%; margin-left: 1%; padding: 2%;
	}
</style>