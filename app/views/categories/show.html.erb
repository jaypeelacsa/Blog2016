<div class="ui tall stacked segment" id="div1">
	<center><h1><%= @category.name%></h1></center>
	<table class="ui selectable celled table">
		<thead>
			<tr>
				<th>Title</th>
				<th>Date</th>
				<th>Action</th>
			</tr>
		</thead>
		
		<tbody>
			<% @posts.each do |p| %>
			<tr>
				<td><%= p.title %></td>
				<td><%= p.date_posted %></td>
				<td><%= link_to "SHOW", post_path(p.id), class: "ui basic button" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

<div class="ui tall stacked segment" id="div2">
	<center><h2>Recent Posts</h2></center><br>
	<div class="ui fitted divider"></div>
	<% @posts.each do |p| %>
	<ul>
		<li><h4><%= link_to p.title, post_path(p.id) %></h3></li>	
	</ul>
	<% end %>
</div>

<style>
	#div1{
		width: 70%; float:left; padding-bottom: 3%;
	}

	#div2{
		width: 29%; float:left; padding-bottom: 3%; margin-left: 1%; padding: 2%;
	}
</style>