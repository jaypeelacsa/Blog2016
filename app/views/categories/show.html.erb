<div class="ui segment">

		<center><h1><%= @category.name%></h1></center>



		<table class="ui selectable celled table">

			<thead>
				<tr>
					<th>Title</th>
					<th>Date</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				<% @posts.each do |p| %>
				<tr>
					<td><%= p.title %></td>
					<td><%= p.date_posted %></td>
					<td><%= link_to "SHOW", post_path(p.id), class: "ui basic button" %></td>
				</tr>
				<% end %>
			</tbody>

		</table>

</div>